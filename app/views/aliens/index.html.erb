<p id="notice"><%= notice %></p>

<h1>Alienígenas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Planeta</th>
      <th>Idade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @aliens.each do |alien| %>
      <tr>
        <td><%= alien.name %></td>
        <td><%= alien.planet.name %></td>
        <td><%= alien.age %></td>
        <td><%= link_to 'Visualizar', alien %></td>
        <td><%= link_to 'Editar', edit_alien_path(alien) %></td>
        <td><%= link_to 'Deletar', alien, method: :delete, data: { confirm: "Você tem certeza que deseja excluir o alien #{alien.name}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Alien', new_alien_path %>
