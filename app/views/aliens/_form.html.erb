<%= form_with(model: alien, local: true) do |form| %>
  <% if alien.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(alien.errors.count, "error") %> prohibited this alien from being saved:</h2>

      <ul>
      <% alien.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :planeta %>
    <%= collection_select(:alien, :planet_id, Planet.all, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :nome %>
    <%= form.text_field :name, id: :alien_name %>
  </div>

  <div class="field">
    <%= form.label :idade %>
    <%= form.number_field :age, id: :alien_age %>
  </div>

  <div class="field">
    <%= form.label :poder %>
    <%= collection_check_boxes(:alien, :power_ids, Power.all, :id, :name) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
